{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/bsggame/css/main.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
    {% if app.session.hasFlash('error') %}
        <div class="flash-error">
            {{ app.session.flash('error') }}
        </div>
    {% endif %}
    {% if userInGame %}
        <div>
            <a href="{{ path('bsg_game_game_page', { 'gameId': currentGameId }) }}">Rejoindre votre partie en cours !</a>
        </div>
    {% else %}
        <div>
            <a href="{{ path('bsg_game_new_game') }}">Cr√©er une nouvelle partie !</a>
        </div>

        <div>
            <a href="{{ path('bsg_game_join_game') }}">Rejoindre une nouvelle partie !</a>
        </div>
    {% endif %}
{% endblock %}
